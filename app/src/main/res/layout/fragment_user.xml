<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light">
    tools:context=".UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <ImageView
        android:id="@+id/back_to_stats"
        android:background="@drawable/dark_arrow_foreground"
        android:layout_marginTop="40dp"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:layout_marginTop="40dp"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:text="LEGG TIL DIN FANGST:"
        android:fontFamily="@font/syne"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25dp"
        android:layout_gravity="center_horizontal"/>


    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="20dp"
        android:text="Bilde:"
        android:fontFamily="@font/syne"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <Button
        android:id="@+id/button_picture"
        android:background="@drawable/search_field"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="125dp"
        android:layout_marginRight="20dp"
        android:text="Last opp"
        android:textColor="@color/white"
        android:fontFamily="@font/syne" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="20dp"
        android:text="Type:"
        android:fontFamily="@font/syne"
        android:textColor="@color/black"
        android:textSize="18dp"
        />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/type"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="190dp"
        android:inputType="text"
        android:hint="Oppgi art"
        android:textColorHint="@color/test"
        android:fontFamily="@font/syne"
        android:backgroundTint="@color/test"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="20dp"
        android:text="Vekt:"
        android:fontFamily="@font/syne"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/vekt"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="270dp"
        android:inputType="numberDecimal"
        android:hint="Oppgi vekt i cm"
        android:textColorHint="@color/test"
        android:fontFamily="@font/syne"
        android:backgroundTint="@color/test"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="20dp"
        android:text="Lengde:"
        android:fontFamily="@font/syne"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/lengde"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="350dp"
        android:inputType="numberDecimal"
        android:hint="Oppgi lengde i cm"
        android:textColorHint="@color/test"
        android:fontFamily="@font/syne"
        android:backgroundTint="@color/test"
        />


    <TextView
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="20dp"
        android:text="Dato:"
        android:fontFamily="@font/syne"
        android:textColor="@color/black"
        android:textSize="18dp"
        />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/dato"
        android:layout_width="260dp"
        android:layout_height="50dp"
        android:layout_marginRight="30dp"
        android:layout_gravity="right"
        android:layout_marginTop="430dp"
        android:inputType="date"
        android:hint="Oppgi dato"
        android:textColorHint="@color/test"
        android:fontFamily="@font/syne"
        android:backgroundTint="@color/test"
        />

    <Button
        android:id="@+id/save_button"
        android:background="@drawable/search_field"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="510dp"
        android:text="Lagre"
        android:textColor="@color/white"
        android:fontFamily="@font/syne" />

</FrameLayout>